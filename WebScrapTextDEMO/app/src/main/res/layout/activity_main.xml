<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bikenmaharjan.webscraptextdemo.MainActivity">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Product "
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />molti

        <ListView
            android:id="@+id/lvInfo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_above="@+id/txtView"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="33dp" />

        <TextView
            android:id="@+id/txtView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_above="@+id/btnGet"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Price"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="100dp" />

        <Button
            android:id="@+id/btnGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Get Price" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
