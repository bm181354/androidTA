            android:layout_width="45dp"
            android:layout_height="35dp"
            android:text="B" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:text="C" />

        <Button
            android:id="@+id/btnD"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:text="D" />

        <Button
            android:id="@+id/btnE"
            android:layout_width="45dp"
            android:layout_height="35dp"
