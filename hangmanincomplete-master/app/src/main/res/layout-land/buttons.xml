            android:layout_width="45dp"
            android:layout_height="35dp"
            android:text="J" />

        <Button
            android:id="@+id/btnK"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:text="K" />

        <Button
            android:id="@+id/btnL"
            android:layout_width="45dp"
            android:layout_height="35dp"
